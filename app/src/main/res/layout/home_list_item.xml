<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_text_white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:text="还有这种操作"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_likecount"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@drawable/num_text_bg"
            android:gravity="center"
            android:text="150"
            android:textColor="@color/num_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tag_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="5dp"
            android:text="苏灿"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tag_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="5dp"
            android:text="专业蹭吃"
            android:textColor="@color/tag_text_color"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:text="7897494"
        android:textColor="@color/content_text_color"
        android:lineSpacingExtra="5dp"
        android:textSize="13sp" />

</LinearLayout>
